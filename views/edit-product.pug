extends layout

block content
	form.form(action="/products/edit/id",method="post")
		.form-group
			label(for='name') Name
			input#name.form-control(type='text' aria-describedby='emailHelp' name="name" value=`${data[index].name}`)
		.form-group
			label(for='price') Price
			input#price.form-control(type='number' name="price" value=`${data[index].price}`)
		.form-group
			label(for='stock') Stock
			input#stock.form-control(type='number' name="stock" value=`${data[index].stock}`)
		.form-group
			label(for='manufacturer') Manufacturer
			input#manufacturer.form-control(type='text' name="manufacturer" value=`${data[index].manufacturerid}`)
			button.btn.btn-primary(type='submit') Submit
